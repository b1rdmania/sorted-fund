# Copy this file to .env and fill in real values.
# Never commit .env or production credentials.

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sorted_fund
DB_USER=postgres
DB_PASSWORD=your_password_here

# Sonic Testnet Configuration
SONIC_RPC_URL=https://rpc.testnet.soniclabs.com
SONIC_CHAIN_ID=14601
ENTRYPOINT_ADDRESS=0x0000000071727de22e5e9d8baf0edac6f37da032
RUNTIME_ALLOWED_CHAIN_IDS=14601

# Pimlico Configuration
PIMLICO_API_KEY=your_pimlico_api_key_here

# Backend Signer (for signing paymasterAndData)
BACKEND_SIGNER_PRIVATE_KEY=your_backend_signer_private_key_here

# Paymaster Contract Address (deployed contract required)
PAYMASTER_ADDRESS=

# Privy Authentication
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Security
API_KEY_SALT=your_api_key_salt_here
ADMIN_API_TOKEN=set_a_long_random_admin_token

# Demo endpoint wallet (optional)
DEMO_WALLET_PRIVATE_KEY=your_demo_wallet_private_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
